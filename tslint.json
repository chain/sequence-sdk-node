{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "object-literal-sort-keys": false,
    "interface-name": [false],
    "no-console": [false],
    "semicolon": [true, "never"],
    "max-classes-per-file": [false],
    "no-var-requires": false,
    "no-bitwise": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "typeLiterals": "never",
          "objects": "always",
          "arrays": "always"
        },
        "singleline": "never"
      }
    ]
  }
}
